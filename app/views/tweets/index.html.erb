<section class='all-tweets'>
  <header>
    <h3>All <%= tweets.count %> Tweets
    <button type="button" class="btn btn-default"><%= link_to "New Tweet", new_tweet_path(tweets) %></button>
  </h3>
</header>
</div>
</div>

  <% tweets.each do |tweet| %>
    <div class='one-tweet'><p> <%= tweet.user.handle %></p>
    <p><%= link_to tweet.body, tweet_path(tweet) %> </p>
  <% end %>
</div>
</section>
