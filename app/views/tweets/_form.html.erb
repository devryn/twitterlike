<div class="all_form">
<div class="row">
  <h4><%= form_title %></h4>
</div>
<div class="row">
  <% if tweet.errors.any? %>
    <% tweet.errors.full_messages.each do |msg| %>
      <p> <%= msg %></p>
    <% end %>
  <% end %>
</div>

    <%= form_for(tweet) do |f| %>
    <div class="input-group">
      <label for="id">User</label>
      <%= f.select :user_id, options_from_collection_for_select(User.all, :id, :name) %>
    </div>
      <div class="row">
        <div class="input-group">
          <label for="body">Body</label>
          <%= f.text_field :body, placeholder: "Tell the world what you have to say!" %>
        </div>
      </div>
      <div class="row">
        <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>
</div>
    <% end %>
